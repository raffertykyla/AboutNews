<div class="row">
 <div class="col-xs-12"> <%= link_to image_tag(@banner.image(:slide), :class => "img-responsive"), @banner.destination if @banner %> </div>
</div>
<div class="row">
 <div class="col-xs-12"> <h2>MVA Chapters</h2></div>
 <% @chapters.each do |chapter| %>
  <div class="col-sm-3 col-xs-6">
   <div class="thumbnail">
    <%= image_tag chapter.image.url(:small), :alt => "Chapter Image", :class => "img-responsive" if !chapter.image.url.blank?  %>
    <div class="caption chapter-caption">
     <h3><%= chapter.name %></h3>
     <p><%= chapter.overview %></p>
     <p><%= link_to "View Chapter Information", "/chapters/#{chapter.id}", :class => "btn btn-default" %></p>
    </div>
   </div>
  </div>
 <% end %>
</div>

<div class="row mva-info">
