<p id="notice"><%= notice %></p>

<h1>Listing Cms Schools</h1>

<table>
  <thead>
    <tr>
      <th>Chapter</th>
      <th>Name</th>
      <th>Code</th>
      <th>Website</th>
      <th>Representative</th>
      <th>Rep email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cms_schools.each do |cms_school| %>
      <tr>
        <td><%= cms_school.chapter_id %></td>
        <td><%= cms_school.name %></td>
        <td><%= cms_school.code %></td>
        <td><%= cms_school.website %></td>
        <td><%= cms_school.representative %></td>
        <td><%= cms_school.rep_email %></td>
        <td><%= link_to 'Show', cms_school %></td>
        <td><%= link_to 'Edit', edit_cms_school_path(cms_school) %></td>
        <td><%= link_to 'Destroy', cms_school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

