<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @cms_page.title %></h3>
  </div>
  <div class="panel-body">
    <p>
	  <strong>Category:</strong>
	  <%= @cms_page.category %>
	</p>
  </div>
  <div>
	  <% Cms::PageSection.where(:page_id => @cms_page.id).each do |section| %>
	    <p><%= image_tag section.photo.url %></p>
	    <p><%= raw section.body %></p>
	  <% end %>
  </div>
  <div class="panel-footer">
	  <%= link_to 'Edit', edit_cms_page_path(@cms_page) %> |
	  <%= link_to 'Back', cms_pages_path %>
  </div>
</div>




