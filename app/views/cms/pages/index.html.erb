<p id="notice"><%= notice %></p>
<h1 class="display-1">Listing All Pages</h1>
<hr>
<table class="table table-striped">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Title</th>
			<th scope="col">Category</th>
			<th scope="col" colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @cms_pages.each do |cms_page| %>
			<tr>
				<th scope="row"><%= cms_page.title %></th>
				<td><%= cms_page.category %></td>
				<td><%= page_link(cms_page, "Show") %> </td>
				<td><%= link_to 'Edit', edit_cms_page_path(cms_page) %></td>
				<td><%= link_to 'Destroy', cms_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<br>
<button type="button" class="btn btn-secondary btn-lg"><%= link_to 'New Page', new_cms_page_path %></button>
