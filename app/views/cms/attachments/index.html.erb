<p id="notice"><%= notice %></p>
<h1 class="display-1">Listing CMS Attachments</h1>
<hr>
<table class="table table-striped">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Title</th>
			<th scope="col">Document</th>
			<th scope="col" colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @cms_attachments.each do |cms_attachment| %>
			<tr>
				<th scope="row"><%= cms_attachment.title %></th>
				<td><%= cms_attachment.document %></td>
				<td><%= link_to 'Show', cms_attachment %></td>
				<td><%= link_to 'Edit', edit_cms_attachment_path(cms_attachment) %></td>
				<td><%= link_to 'Destroy', cms_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<br>
<button type="button" class="btn btn-secondary btn-lg"><%= link_to 'New Attachment', new_cms_attachment_path %></button>